extends layout

block page_style
  style(type="text/css").
    div.timestamp {
      text-align: right;
    }

block content
  div.container
    h1= title
    a.btn.btn-primary(href="/add_jeep")
      i.icon-plus.icon-white
      | Add Jeep
    table.table.table-striped
      thead
        tr
          th Plate Number
          th Driver
          th Line
          th Total Votes
          th Amount Raised
      tbody
        - each jeep in jeeps
          tr
            td= jeep.plate_num
            td= jeep.first_name
            td= jeep.line
            td= jeep.total_votes
            td= jeep.amount_raised

    div.timestamp as of 8/19/2013 13:01:02