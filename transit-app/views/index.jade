extends layout

block page_style
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  div.main-area
    div.phone-image-area
      img(src="img/iphone-5.png", width="400", height="450")
    div.numbers-area
      div.main-summary-area
        span.number 14,895
        |  texts sent, and counting...
      div.sub-summary-area.row
        div.span3#JEEP_AREA
          div.subnumber 789
          div.sub-image-area
            img(src="/img/jeep-icon.jpg")
          div.sub-message-area Unique Jeepneys
        div.span3#LINE_AREA
          div.subnumber 542
          div.sub-image-area
            img(src="/img/person-icon.jpg")
          div.sub-message-area Unique Commuters
        div.span3#VOTER_AREA
          div.subnumber 9,589
          div.sub-image-area
            img(src="/img/coin-icon.jpg")
          div.sub-message-area Pesos Worth of Prizes

block page_scripts
  script(type="text/javascript").
    function dataNotification() {

    }

    $(document).ready(
      function() {
        $("div.sub-summary-area.row div.span3").click(
          function() {
            var id = $(this).attr('id');

            switch (id) {
              case 'JEEP_AREA':
                window.location.href = '/jeeps';
                break;
              case 'LINE_AREA':
                window.location.href = '/voters';
                break;
              case 'VOTER_AREA':
                window.location.href = '/prizes';
                break;
              default:
                break;
            }
          }
        );
      }
    );
